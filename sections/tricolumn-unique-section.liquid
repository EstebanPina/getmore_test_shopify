{% schema %}
  {
    "name": "Tricolumn Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Encabezado de la Sección",
        "default": "Bienvenido a Nuestra Tienda"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Columna de Texto",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Texto de la Columna",
            "default": "Texto predeterminado"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Tricolumn Section",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}
  {% stylesheet %}
    .responsive-section {
      padding: 20px;
      background-color: #f9f9f9;
      border: 1px solid #ccc;
    }
  
    .columns-container {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }
  
    .column {
      flex: 1 1 100%; /* Por defecto, cada columna toma el 100% del ancho del contenedor */
      text-align: center;
      padding: 10px;
      border: 1px solid #ddd;
    }
  
    /* Media query para pantallas más grandes que 749px */
    @media (min-width: 750px) {
      .column {
        flex: 1 1 33%; /* Cada columna toma aproximadamente un tercio del ancho del contenedor */
      }
    }
    {% endstylesheet %}
  
  <div class="responsive-section">
    <div class="columns-container">
      {% for block in section.blocks %}
        <div class="column">
          {{ block.settings.text }}
        </div>
      {% endfor %}
    </div>
  </div>
  