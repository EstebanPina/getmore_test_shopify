{% schema %}
  {
    "name": "Sección personalizada",
    "settings": [
      {
        "type": "collection",
        "id": "collection_id",
        "label": "Seleccione una colección"
      },
      {
        "type": "number",
        "id": "products_to_show",
        "label": "Número de productos a mostrar",
        "default": 3
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Imagen del slideshow",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Imagen"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Sección personalizada",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}
  
  {% stylesheet %}
  .custom-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1rem;
    margin-bottom: 1rem;
    overflow-x: hidden;
  }
  
  .slideshow {
    min-width: 38%;
    aspect-ratio: 1 / 1;
    position: relative;
    display: flex;
    overflow: scroll;
    scroll-snap-type: x mandatory;
  }
  .slideshow img{
    width: 100%;
    left:0;
    position: sticky;
    object-fit:cover;
    border-radius:5px;
  }
  .products {
    min-width: 75%;
    overflow-x: scroll;
    display: flex;
    gap: 2.25rem;
  }
  .product{
    display:flex;
    flex-direction:column;
    width:33%;
  }
  .product span{
    width:fit-content;
    border-radius:100%;
    background-color:#cbe346;
    color: #fff;
    width: 2.4rem;
    height: 2.4rem;
    text-align: center;
    font-style: bold;
    margin: 0;
    font-size: 1.2rem;
  }
  .product img{
    width: 100%;
    position: sticky;
    object-fit:cover;
    border-radius:5px;
  }
  .button-slider{
    background-color:#cbe346;
    color:white;
    border-radius: 100%;
    width: 4rem;
    height: 4rem;
    display:flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
  }
  .buttons-container{
    position:absolute;
    bottom:5%;
    display:flex;
    justify-content:space-between;
    width:80%;
    background-color:#ff000088;
    z-index:20;
  }
  {% endstylesheet %}
  
  <div class="custom-section">
    <div class="slideshow">
      {% for block in section.blocks %}
        <img id={{ forloop.index }} src="{{ block.settings.image | img_url: '400x400' }}" alt={{ block.id }}>
      {% endfor %}
      <div class="buttons-container">
        <a href="#1" class="button-slider"> <span>&#x2B9C;</span> </a>
        <a href="#2" class="button-slider"> <span>&#x2B9E;</span> </a>
      </div>
    </div>
    <div class="products">
      {% assign products = collections[section.settings.collection_id].products %}
      {% for product in products limit: section.settings.products_to_show %}
        <div class="product">
          <span>{{ forloop.index }}</span>
          <img src="{{ product.featured_image | img_url: '300x300' }}" alt="{{ product.title }}">
        </div>
      {% endfor %}
    </div>
  </div>
  