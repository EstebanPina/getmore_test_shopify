{% schema %}
  {
    "name": "Sección personalizada",
    "settings": [
      {
        "type": "collection",
        "id": "collection_id",
        "label": "Seleccione una colección"
      },
      {
        "type": "number",
        "id": "products_to_show",
        "label": "Número de productos a mostrar",
        "default": 3
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Imagen del slideshow",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Imagen"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Sección personalizada",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}
  
  {% stylesheet %}
  .custom-section {
    display: flex;
    justify-content: space-between;
  }
  
  .slideshow {
    width: 30%;
    aspect-ratio: 1 / 1 ;
    position: relative;
    display: flex;
    overflow: scroll;
    scroll-snap-type: x mandatory;
  }
  .slideshow img{
    width: 100%;
    left:0;
    position: sticky;
    object-fit:cover;
    border-radius:5px;
  }
  .products {
    width: 50%;
  }
  .product{
    display:flex;
    flex-direction:column;
  }
  .product p{
    width:fit-content;
    border-radius:100%;
    background-color:#cbe346;
    color:white;
    padding:.5rem;
  }
  {% endstylesheet %}
  
  <div class="custom-section">
    <div class="slideshow">
      {% for block in section.blocks %}
        <img src="{{ block.settings.image | img_url: '100%' }}" alt="">
      {% endfor %}
    </div>
    <div class="products">
      {% assign products = collections[section.settings.collection_id].products %}
      {% for product in products limit: section.settings.products_to_show %}
        <div class="product">
          <p>Producto #{{ forloop.index }}</p>
          <img src="{{ product.featured_image | img_url: '100x100' }}" alt="{{ product.title }}">
        </div>
      {% endfor %}
    </div>
  </div>
  