{% schema %}
{
  "name": "Sección personalizada",
  "settings": [
    {
      "type": "collection",
      "id": "collection_id",
      "label": "Seleccione una colección"
    },
    {
      "type": "number",
      "id": "products_to_show",
      "label": "Número de productos a mostrar",
      "default": 3
    },
    {
      "type": "inline_richtext",
      "id": "slider_title",
      "label": "Título del Slider",
      "default": "Título predeterminado"
    },
    {
      "type": "inline_richtext",
      "id": "slider_description",
      "label": "Descripción del Slider",
      "default": "Descripción predeterminada"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Imagen del slideshow",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sección personalizada",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .custom-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1rem;
    margin-bottom: 1rem;
    overflow-x: hidden;
    gap: 2rem;
  }
  @media screen and (max-width: 749px) {
      .custom-section{
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
        margin-bottom: 1rem;
        overflow-x: hidden;
        gap: 2rem;
        flex-direction:column;
      }
    }

  .slideshow {
    aspect-ratio: 1 / 1;
    position: relative;
    display: flex;
    overflow: scroll;
    scroll-snap-type: x mandatory;
    -ms-overflow-style: none;  /* Internet Explorer 10+ */
    scrollbar-width: none;  /* Firefox */
  }
  .slideshow::-webkit-scrollbar { 
    display: none;  /* Safari and Chrome */
}
  .container-slider {
    min-width: 38%;
    position: relative;
    display: flex;
    justify-content:center;
  }
  .slideshow img {
    width: 100%;
    left: 0;
    position: sticky;
    object-fit: cover;
    border-radius: 5px;
  }
  .products {
    min-width: 75%;
    overflow-x: scroll;
    display: flex;
    gap: 2.25rem;
    padding: 1rem;
    -ms-overflow-style: none;  /* Internet Explorer 10+ */
    scrollbar-width: none;  /* Firefox */
  }
  .products::-webkit-scrollbar { 
    display: none;  /* Safari and Chrome */
}
  .product {
    display: flex;
    flex-direction: column;
    width: 33%;
    background-color:#f3f4f8;
    border-radius:10%;
    padding:2rem;
  }
  .product span {
    width: fit-content;
    border-radius: 100%;
    background-color: #cbe346;
    color: #fff;
    width: 2.4rem;
    height: 2.4rem;
    text-align: center;
    font-style: bold;
    margin: 0;
    font-size: 1.2rem;
  }
  .product img {
    width: 100%;
    position: sticky;
    object-fit: cover;
    border-radius: 5px;
  }
  .button-slider {
    background-color: #cbe346;
    border:0;
    color: white;
    border-radius: 100%;
    width: 4rem;
    height: 4rem;
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
  }
  .buttons-container {
    position: absolute;
    bottom: 5%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    width: 80%;
    z-index: 20;
    align-items: center;
  }
  .white-button {
    display: flex;
    background-color: #fff6;
    text-decoration: none;
    width: 1rem;
    height: 1rem;
    text-align: center;
    justify-content: center;
    align-items: center;
    border-radius: 100%;
    color:transparent;
    border:0;
  }
  .nav-buttons-container{
    display:flex;
    align-items:center;
    gap:1rem;
  }
  .text-container{
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 10%;
    gap: 1rem;
    width: 60%;
    padding: 2rem;
    z-index: 20;
  }
  .title-slider{
    display: flex;
    flex-direction:column;
    color: white;
    margin: 0;
    font-size: xx-large;
  }
  .description-slider{
    margin: 0;
    color: white;
  }
  .buttons-next-prev{
    display:flex;
    gap:1rem;
  }
{% endstylesheet %}
<script>
let currentImageIndex = 0;
let imageWidth; // Declaramos la variable para el ancho de las imágenes
const images = document.querySelectorAll('#slideshow img');

function showImage(index) {
  const slideshow = document.getElementById('slideshow'); // Asegurarse de obtener la referencia aquí dentro
  if (slideshow) { // Verificar si slideshow realmente existe
    const scrollPosition = index * imageWidth;
    slideshow.scrollTo({
      left: scrollPosition,
      behavior: 'smooth'
    });
  } else {
    console.error('Slideshow container not found!');
  }
}

function nextImage() {
  currentImageIndex = (currentImageIndex + 1) % images.length;
  showImage(currentImageIndex);
}

function previousImage() {
  currentImageIndex = (currentImageIndex - 1 + images.length) % images.length;
  showImage(currentImageIndex);
}

// Evento DOMContentLoaded para asegurar que todos los elementos están cargados
document.addEventListener('DOMContentLoaded', function() {
  if (images.length > 0) {
    imageWidth = images[0].clientWidth; // Inicializa imageWidth cuando sabemos que las imágenes están cargadas
  }
  showImage(currentImageIndex); // Muestra la primera imagen inicialmente
});
</script>


<div class="custom-section">
  <div class="container-slider">
    <div class="text-container">
      <h3 class="title-slider" {{ settings.shopify_attributes }}>{{ section.settings.slider_title }}</h3>
      <p class="description-slider" {{ settings.shopify_attributes }}>{{ section.settings.slider_description }}</p>
    </div>
    <div class="slideshow" id="slideshow">
      {% for block in section.blocks %}
        <img
          id="image-slider-{{ forloop.index }}"
          src="{{ block.settings.image | img_url: '400x400' }}"
          alt="{{ block.id }}"
          style="display: {% if forloop.first %}block{% else %}none{% endif %};"
        />
      {% endfor %}
    </div>
    <div class="buttons-container">
      <div class="nav-buttons-container">
        {% for block in section.blocks %}
          <button class="white-button" onclick="showImage({{ forloop.index0 }});">.</button>
        {% endfor %}
        </div>
      <div class="buttons-next-prev">
        <button  class="button-slider" onclick="previousImage()"> <span>&#x2B9C;</span> </button>
        <button  class="button-slider" onclick="nextImage()"> <span>&#x2B9E;</span> </button>
        </div>
    </div>
  </div>
  <div class="products">
    {% assign products = collections[section.settings.collection_id].products %}
    {% for product in products limit: section.settings.products_to_show %}
      <div class="product">
        <span>{{ forloop.index }}</span>
        <img src="{{ product.featured_image | img_url: '300x300' }}" alt="{{ product.title }}"/>
      </div>
    {% endfor %}
  </div>
</div>
